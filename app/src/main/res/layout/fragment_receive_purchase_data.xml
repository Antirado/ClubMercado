<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/full_screen"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PurchaseDashboard$ReceivePurchaseData">
    <RelativeLayout
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/header_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="3dp"
            android:text="@string/header_dashboard"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/header_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/header_pde_title"
            android:labelFor="@+id/header_pde_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:text="@string/punto_de_entrega"
            android:textColor="@color/colorDarkGray" />

        <TextView
            android:id="@+id/header_pde_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/header_pde_title"
            android:layout_marginStart="5dp"
            android:background="@drawable/rounded_corners_light_blue"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="@string/pde_placeholder"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/header_fecha_title"
            android:labelFor="@+id/header_fecha_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/header_fecha_text"
            android:layout_alignBaseline="@+id/header_pde_title"
            android:layout_centerVertical="true"
            android:text="@string/fecha"
            android:textColor="@color/colorDarkGray" />

        <TextView
            android:id="@+id/header_fecha_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:maxLength="10"
            android:gravity="center"
            android:background="@drawable/rounded_corners_light_blue"
            android:text="@string/fecha_placeholder"
            android:textColor="@color/colorBlack"
            android:padding="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/header_body"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/header_end_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="3dp"
            android:textAllCaps="true"
            android:text="@string/header_transmit_data"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/purchase_id_container"
        android:padding="5dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="@id/full_screen"
        app:layout_constraintLeft_toLeftOf="@id/full_screen"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/header_end">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_weight="0.25"
            android:text="@string/purchase"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_weight="0.25"
            android:background="@drawable/rounded_corners_light_blue"
            android:text="@string/purchase_id_placeholder" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:layout_weight="0.7"
            android:padding="3dp"
            android:text="@string/veggie_disjobel_placeholder"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/transmit_progress"
        app:layout_constraintRight_toRightOf="@id/full_screen"
        app:layout_constraintLeft_toLeftOf="@id/full_screen"
        android:padding="5dp"
        android:background="@drawable/bottom_line"
        app:layout_constraintTop_toBottomOf="@id/purchase_id_container">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="3dp"
            android:gravity="center"
            android:text="@string/supplier"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_layout_green"
                android:textColor="@color/colorAccent"
                android:text="39"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:progress="100"
            android:layout_gravity="center"
            style="@style/MyProgressBarGreen"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.2"
            android:padding="3dp"
            android:text="@string/participants"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/rounded_corners_yellow"
                android:textColor="@color/colorAccent"
                android:text="16"/>
        </RelativeLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:progress="85"
            android:layout_gravity="center"
            style="@style/MyProgressBarYellow"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="@id/full_screen"
        app:layout_constraintLeft_toLeftOf="@id/full_screen"
        app:layout_constraintTop_toBottomOf="@id/transmit_progress"
        android:id="@+id/menu_container">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="15dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_layout_green"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:text="42"/>
            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:background="@drawable/rounded_corners_light_green"
                android:gravity="center"
                android:textColor="@color/colorGreen"
                android:textStyle="bold"
                android:text="@string/receive_button1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="2dp"
                    android:padding="15dp"
                    android:background="@drawable/rounded_layout_yellow"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:text="16"/>
            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_margin="2dp"
                android:background="@drawable/rounded_corners_light_yellow"
                android:gravity="center"
                android:padding="20dp"
                android:textColor="@color/colorYellow"
                android:textStyle="bold"
                android:text="@string/receive_button2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="2dp"
                    android:padding="15dp"
                    android:background="@drawable/rounded_layout_blue"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:text="58"/>
            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_margin="2dp"
                android:background="@drawable/rounded_corners_light_blue"
                android:gravity="center"
                android:padding="20dp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/receive_button3"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corners_gray"
            android:textColor="@color/colorAccent"
            android:text="@string/purchase"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
